---
import BaseLayout from "../layouts/BaseLayout.astro";
import { AUTHOR_NAME } from '../utils/constants.js';

const pageTitle = "关于我";

const identity = {
  name: AUTHOR_NAME,
  zone: "中国",
  occupation: "后端开发工程师",
  hobbies: ["摄影", "旅游"],
};

const skills = ["Java", "SpringBoot", "Kotlin", "Python", "Rust", "Web3"];

const avatarUrl = "/images/profile.jpeg"; // 您的头像文件路径
---

<BaseLayout pageTitle = {pageTitle}>
  <div class="about-page-wrapper">
    <div class="profile-header">
      <img src={avatarUrl} alt="我的头像" class="avatar" />
      <h2 class="profile-name">你好，我是 {identity.name}！</h2>
      <p class="profile-tagline">一名{identity.occupation}，对技术充满热情。</p>
    </div>

    <div class="content-grid">
      <section class="card intro-section">
        <h3>我的故事</h3>
        <p>我喜欢通过这个博客分享我的知识和经验，记录我的学习旅程。</p>
        <p>随着我完成更多教程，该站点将更新，所以请继续查看我的旅程将如何进行吧！</p>
      </section>

      <section class="card details-section">
        <h3>关于我的几个事实：</h3>
        <ul>
          <li>我的名字是 <span>{identity.name}</span>。</li>
          <li>我住在 <span>{identity.zone}</span>。</li>
          <li>我的职业是 <span>{identity.occupation}</span>。</li>
          <li>爱好 <span>{identity.hobbies.join('、')}</span>。</li>
        </ul>
      </section>

      <section class="card skills-section">
        <h3>我的技能：</h3>
        <div class="skills-grid">
          {skills.map((skill) => <span class="skill-tag">{skill}</span>)}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .about-page-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    padding: 2rem 1rem;
  }

  .profile-header {
    display: flex;
    flex-direction: column;
    align-items: center; /* 确保所有子元素水平居中 */
    width: 100%; /* 确保占据可用宽度 */
    margin-bottom: 2rem;
  }

  .avatar {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid #ff9776;
    box-shadow: 0 0 25px rgba(0, 0, 0, 0.4);
    margin-bottom: 1.5rem; /* 保持底部间距 */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .avatar:hover {
    transform: scale(1.08); /* 悬停时放大更多 */
    box-shadow: 0 0 40px rgba(0, 0, 0, 0.5); /* 悬停时阴影更深 */
  }

  .profile-name {
    font-size: 2.8rem;
    color: #333;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .profile-tagline {
    font-size: 1.3rem;
    color: #666;
    text-align: center;
  }

  .page-title {
    font-size: 3.5rem;
    color: #333;
    margin-bottom: 1rem;
    text-align: center;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr; /* 始终单列 */
    gap: 2rem;
    max-width: 1000px; /* 限制内容网格的最大宽度 */
    width: 100%;
  }

  .card {
    background-color: #fff;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
  }

  .card:hover {
    transform: translateY(-8px); /* 悬停上浮 */
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
  }

  .card h3 {
    font-size: 2rem;
    color: #ff9776;
    margin-bottom: 1.5rem;
  }

  .intro-section p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: #555;
  }

  .details-section ul {
    list-style: none;
    padding: 0;
  }

  .details-section li {
    font-size: 1.1rem;
    line-height: 2;
    color: #555;
    margin-bottom: 0.5rem;
  }

  .details-section li span {
    font-weight: bold;
    color: #333;
  }

  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.8rem;
  }

  .skill-tag {
    background-color: #e0e0e0;
    color: #333;
    padding: 0.7rem 1.4rem;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .skill-tag:hover {
    background-color: #ff9776;
    color: #fff;
  }

  /* Dark Mode Styles */
  html.dark .profile-name, html.dark .profile-tagline {
    color: #e2e8f0;
  }

  html.dark .card {
    background-color: #2d3748;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  html.dark .card h3 {
    color: #ff9776;
  }

  html.dark .intro-section p, html.dark .details-section li {
    color: #cbd5e0;
  }

  html.dark .details-section li span {
    color: #e2e8f0;
  }

  html.dark .skill-tag {
    background-color: #4a5568;
    color: #e2e8f0;
  }

  html.dark .skill-tag:hover {
    background-color: #ff9776;
    color: #1a202c;
  }
</style>