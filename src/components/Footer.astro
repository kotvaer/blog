---
import Social from './Social.astro';
import { AUTHOR_NAME } from '../utils/constants.js';
const currentYear = new Date().getFullYear();
---
<footer class="site-footer">
  <div class="footer-container">
    <div class="social-links">
      <Social platform="x" />
      <Social platform="github" />
      <Social platform="youtube"  />
      <Social platform="email"  />
    </div>
    <div class="copyright">
      &copy; {currentYear} {AUTHOR_NAME}的博客. All rights reserved.
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #1a202c; /* 深灰色背景 */
    color: #a0aec0; /* 柔和的文字颜色 */
    padding: 3rem 1rem;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 80ch;
    margin: 0 auto;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .copyright {
    font-size: 0.9rem;
  }

  /* 覆盖 Social.astro 中的图标颜色 */
  .social-links :global(a) {
    color: #a0aec0;
  }

  .social-links :global(a:hover) {
    color: #fff; /* 悬停时变为白色 */
  }

  /* 在暗黑模式下，页脚样式保持不变，因为它本身就是暗色设计 */
</style>
